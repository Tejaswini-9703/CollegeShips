<%- include('partials/header2'); -%>

<div class="card-body p-4 p-sm-5">
    <form class="row g-3" action="/user/pi" method="post" enctype="multipart/form-data">
        <legend>
            <h2><b>Personal Information</b></h2>
        </legend>
        <hr />
        <legend>Personal Details</legend>
        <div class="col-md-4">
            <label for="pdEmail" class="form-label">Email</label>
            <input type="email" class="form-control" value="example@gmail.com" id="pdEmail" readonly />
        </div>
        <div class="col-md-4">
            <label for="pdFirstName" class="form-label">First Name</label>
            <input type="text" class="form-control" name="firstName" id="pdFirstName" required />
        </div>
        <div class="col-md-4">
            <label for="pdLastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="pdLastName" />
        </div>
        <div class="col-md-3">
            <label for="pdAadhaar" class="form-label">Aadhar Number</label>
            <input type="text" class="form-control" name="aadharNumber"  id="pdAadhaar"  />
        </div>
        <div class="col-md-3">
            <label for="pdMobile" class="form-label">Mobile Number</label>
            <input type="text" class="form-control" name="mobileNumber" id="pdMobile"  />
        </div>
        <div class="col-md-3">
            <label for="pdDOB" class="form-label">Date of Birth</label>
            <input type="date" class="form-control" name="dob" id="pdDOB" />
        </div>
        <div class="col-md-3">
            <label for="pdGender" class="form-label">Gender</label>
            <select id="pdGender" name="gender" class="form-select">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Others">Others</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="pdFatherName" class="form-label">Father's Full Name</label>
            <input type="text" class="form-control" name="fatherName" id="pdFatherName" />
        </div>
        <div class="col-md-6">
            <label for="pdMotherName" class="form-label">Mother's Full Name</label>
            <input type="text" class="form-control" name="motherName" id="pdMotherName" />
        </div>
        <div class="col-12">
            <label for="pdAddress" class="form-label">Address</label>
            <input type="text" class="form-control" name="address" id="pdAddress" placeholder="1234 Main St" />
        </div>

        <div class="col-md-4">
            <label for="pdState" class="form-label">State</label>
            <select id="pdState" name="state" class="form-select">
                <option selected>Choose...</option>
                <option value="Maharashtra">Maharashtra</option>
                <option value="Tamil Nadu">Tamil Nadu</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="pdDistrict" class="form-label">District</label>
            <select id="pdDistrict" name="district" class="form-select">
                <option value="Kolhapur">Kolhapur</option>
                <option value="Amhednagar">Amhednagar</option>
                <option value="Pune">Pune</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="pdTaluka" class="form-label">Taluka</label>
            <select id="pdTaluka" name="taluka" class="form-select">
                <option value="Karveer">Karveer</option>
                <option value="Ichalkaranji">Ichalkaranji</option>
                <option value="Hatkalangle">Hatkalangle</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="pdPinCode" class="form-label">Pin Code</label>
            <input type="text" name="pincode" class="form-control" id="pdPinCode" />
        </div>

        <div class="col-md-2">
            <label for="pdMartialStatus" class="form-label">Marital Status</label>
            <select id="pdMartialStatus" name="maritalStatus" class="form-select">
                <option value="Married">Married</option>
                <option value="Unmarried">Unmarried</option>
                <option value="Divorcee">Divorcee</option>
            </select>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <legend>Religion & Caste Details</legend>

        <div class="col-md-2">
            <label for="pdReligion" class="form-label">Religion</label>
            <select id="pdReligion" name="religion" class="form-select">
                <option value="Hindu">Hindu</option>
                <option value="Islam">Islam</option>
                <option value="Cristian">Cristian</option>
                <option value="Sikh">Sikh</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="pdCasteCategory" class="form-label">Caste Category</label>
            <select id="pdCasteCategory" name="casteCategory" class="form-select">
                <option value="General">General</option>
                <option value="ST">ST</option>
                <option value="SC">SC</option>
                <option value="SBC">SBC</option>
                <option value="OBC">OBC</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="pdCaste" class="form-label">Caste</label>
            <select id="pdCaste" name="caste" class="form-select">
                <option value="Maratha">Maratha</option>
                <option value="Gond">Gond</option>
                <option value="Brahmin">Brahmin</option>
            </select>
        </div>

        <div class="col-md-1"></div>

        <div class="col-md-3">
            <label for="pdCateCertificateYesNo" class="form-label">Do you have a caste Certificate?</label>
            <br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="haveCasteCertificate" id="pdCateCertificateYes"
                    value="Yes" />
                <label class="form-check-label" for="pdCateCertificateYes">
                    Yes
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="haveCasteCertificate" id="pdCateCertificateNo"
                    value="No" />
                <label class="form-check-label" for="pdCateCertificateNo">
                    No
                </label>
            </div>
        </div>

        <div class="col-md-3">
            <label for="pdCasteCertificateNumber" class="form-label">Caste Certificate Number</label>
            <input type="text" class="form-control"name="casteCertificateNumber" id="pdCasteCertificateNumber" />
        </div>

        <div class="col-md-3">
            <label for="pdCasteCertificateDistrict" class="form-label">Issuing District</label>
            <input type="text" class="form-control" name="casteIssuingDistrict" id="pdCasteCertificateDistrict" />
        </div>

        <div class="col-md-4">
            <label for="pdCasteCertificateName" class="form-label">Applicant Name</label>
            <input type="text" class="form-control" name="casteApplicantName" id="pdCasteCertificateName" />
        </div>

        <div class="col-md-2">
            <label for="pdCasteCertificateIssueAuthority" class="form-label">Issuing Authority</label>
            <select id="pdCasteCertificateIssueAuthority" name="casteIssuingAuthority" class="form-select">
                <option value="Divisional Office">Divisional Office</option>
                <option value="Sub-divisional office">Sub-divisional office</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="pdCasteCertificateIssueDate" class="form-label">Issuing Date</label>
            <input type="date" class="form-control" name="casteIssuingDate" id="pdCasteCertificateIssueDate" />
        </div>
        <div class="col-md-6">
            <label for="pdCasteCertificate" class="form-label">Caste Certificate</label><br />
            <div class="input-group">
                <input type="file" class="form-control" id="pdCasteCertificate" name="casteCretificate"/>
                <!-- <button type="view" class="btn btn-secondary">View Document</button> -->
            </div>
        </div>

        <div class="col-md-2"></div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <legend>Income Details</legend>

        <div class="col-md-3">
            <label for="pdAnnualIncome" class="form-label">Family Annual Income</label>
            <input type="text" name="familyAnnualIncome" class="form-control" id="pdAnnualIncome" />
        </div>
        <div class="col-md-1"></div>

        <div class="col-md-3">
            <label for="pdIncomeCertificateYesNo" class="form-label">Do you have Income Certificate?</label>
            <br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="haveIncomeCertificate" id="pdIncomeCertificateYes"
                    value="Yes" />
                <label class="form-check-label" for="pdIncomeCertificateYes">
                    Yes
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="haveIncomeCertificate" id="pdIncomeCertificateNo"
                    value="No" />
                <label class="form-check-label" for="pdIncomeCertificateNo">
                    No
                </label>
            </div>
        </div>

        <div class="col-md-3">
            <label for="pdIncomeCertificateNumber" class="form-label">Income Certificate Number</label>
            <input type="text" class="form-control" name="incomeCertificateNumber" id="pdIncomeCertificateNumber" />
        </div>

        <div class="col-md-2">
            <label for="pdIncomeCertificateAuthority" class="form-label">Issuing Authority</label>
            <select id="pdIncomeCertificateAuthority" name="incomeIssuingAuthority" class="form-select">
                <option value="Divisional Office">Divisional Office</option>
                <option value="Sub-divisional office">Sub-divisional office</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="pdIncomeCertificateDate" class="form-label">Issuing Date</label>
            <input type="date" class="form-control" name="incomeIssuingDate" id="pdIncomeCertificateDate" />
        </div>

        <div class="col-md-6">
            <label for="pdIncomeCertificate" class="form-label">Income Certificate</label><br />
            <div class="input-group">
                <input type="file" class="form-control" id="pdIncomeCertificate" name="incomeCertificate"/>
                <!-- <button type="view" class="btn btn-secondary">View Document</button> -->
            </div>
        </div>
        <div class="col-md-2"></div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <legend>Domicile Details</legend>

        <div class="col-md-3">
            <label for="pdDomicile" class="form-label">Which Domicile are you?</label>
            <select id="pdDomicile" name="domicileState" class="form-select">
                <option value="Maharashtra">Maharashtra</option>
                <option value="Tamil Nadu">Tamil Nadu</option>
                <option value="Kashmir">Kashmir</option>
            </select>
        </div>
        <div class="col-md-1"></div>

        <div class="col-md-3">
            <label for="pdDomicileCertificateYesNo" class="form-label">Do you have Domicile Certificate?</label>
            <br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="haveDomicileCertificate" id="pdDomicileCertificateYes"
                    value="Yes" />
                <label class="form-check-label" for="pdDomicileCertificateYes">
                    Yes
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="haveDomicileCertificate" id="pdDomicileCertificateNo"
                    value="No" />
                <label class="form-check-label" for="pdDomicileCertificateNo">
                    No
                </label>
            </div>
        </div>

        <div class="col-md-3">
            <label for="pdDomicileCertificateNumber" class="form-label">Domicile Certificate Number</label>
            <input type="text" class="form-control" name="domicileCertificateNumber" id="pdDomicileCertificateNumber" />
        </div>

        <div class="col-md-2">
            <label for="pdDomicileCertificateRelation" class="form-label">Relationship Type</label>
            <select id="pdDomicileCertificateRelation" name="domicileRelationType" class="form-select">
                <option value="Self">Self</option>
                <option value="Parent">Parent</option>
                <option value="Grandparent">Grandparent</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="pdDomicileCertificateAuthority" class="form-label">Issuing Authority</label>
            <select id="pdDomicileCertificateAuthority" name="domicileIssuingAuthority" class="form-select">
                <option value="Divisional Office">Divisional Office</option>
                <option value="Sub-divisional office">Sub-divisional office</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="pdDomicileCertificateDate" class="form-label">Issuing Date</label>
            <input type="date" class="form-control" name="domicileIssuingDate" id="pdDomicileCertificateDate" />
        </div>

        <div class="col-md-6">
            <label for="pdDomicileCertificate" class="form-label">Income Certificate</label><br />
            <div class="input-group">
                <input type="file" class="form-control" id="pdDomicileCertificate" name="domicileCertificate"/>
                <!-- <button type="view" class="btn btn-secondary">View Document</button> -->
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <legend>Personal Eligibility Details</legend>

        <div class="col-md-2">
            <label for="pdSalaried" class="form-label">Are you salaried?</label>
            <select id="pdSalaried" name="isSalaried" class="form-select">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="pdDisabled" class="form-label">Disability of any type?</label>
            <select id="pdDisabled" name="haveDisability" class="form-select">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="pdDisabledType" class="form-label">If yes, what type?</label>
            <input type="text" class="form-control" name="disabilityDesc" id="pdDisabledType" />
        </div>

        <div class="col-md-5">
            <label for="pdDisabledCertificate" class="form-label">Disability Certificate</label><br />
            <div class="input-group">
                <input type="file" class="form-control" id="pdDisabledCertificate" name="disabilityCertificate"/>
                <!-- <button type="view" class="btn btn-secondary">View Document</button> -->
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />

        <legend>Bank Details</legend>

        <div class="col-md-4">
            <label for="pdBankAccountNumber" class="form-label">Bank Account Number</label>
            <input type="text" class="form-control" name="bankAccountNumber" id="pdBankAccountNumber" />
        </div>

        <div class="col-md-4">
            <label for="pdBankIFSCCode" class="form-label">IFSC Code</label>
            <input type="text" class="form-control" name="bankIFSCode" id="pdBankIFSCCode" />
        </div>

        <div class="col-md-4">
            <label for="pdBankBranch" class="form-label">Branch Name</label>
            <input type="text" class="form-control" name="bankBranch" id="pdBankBranch" />
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="d-grid" style="width: auto; align-items: center">
            <button type="submit" class="btn btn-primary" id="pdBtnSubmit">
                Save and Next
            </button>
        </div>

        <div class="d-grid" style="width: auto; align-items: center">
            <button type="reset" class="btn btn-primary" id="pdBtnReset">
                Reset
            </button>
        </div>
    </form>
</div>
</body>

</html>